<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wang.bilaccount.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/Container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c4c6c5"></View>


    <LinearLayout
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF">


        <TextView
            android:id="@+id/txt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_main_first_selector"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="首页"
            android:textColor="@drawable/tabbar_text_color" />


        <TextView
            android:id="@+id/txt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_main_third_selector"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="账单"
            android:textColor="@drawable/tabbar_text_color" />


        <TextView
            android:id="@+id/txt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/rb_main_four_selector"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="我"
            android:textColor="@drawable/tabbar_text_color" />


    </LinearLayout>


</LinearLayout>
